let rec push e a â‰  
 match e with
 [ Epsilon â‡’ Cons Epsilon a
 | Cons e1 a1 â‡’ Cons (push e1 a) (a1)
 ].
 
let rec e_size e â‰ 
 match e with
 [ Epsilon â‡’ O
 | Cons e s â‡’ S (e_size e)
 ]
.

