let rec concat a b â‰ 
 match a with
 [ Epsilon â‡’ b
 | Cons e a' â‡’ match b with 
                      [ Epsilon â‡’ Cons e a'
                      | Cons e' b' â‡’ Cons (concat e (push e' a')) b'
