lemma free_occ_max: âˆ€x, t. free_occ_t (variable (max (fresh_var_t t) x)) t=0.
#x #t normalize cut (leb (fresh_var_t t) x= true âˆ¨ Â leb (fresh_var_t t) x= false)
// * #Htf >Htf normalize
[ lapply (leb_true_to_le â€¦ Htf) -Htf #Hle lapply (fresh_var_gt x) * #H1
  lapply (H1 t) -H1 #H1 #_ lapply(inverse â€¦ H1) -H1 #H1 normalize in match (Â¬? â‰¥1) in H1;
  normalize cut ((fresh_var_t t)â‰¤xâ†’free_occ_t (Î½x) t=0)
   [ lapply (not_ge_1_to_O â€¦ (H1 ((le_to_not_gt â€¦ (fresh_var_t t) x) Hle))) //
   | #H2 @(H2 Hle)
   ]
| @foo #z #z_def #Hz lapply(leb_false_to_not_le (fresh_var_t t) x Htf)
  -Htf #H1 lapply((not_le_to_lt (fresh_var_t t) x) H1) -H1 #H1
  lapply (Hz z) -Hz #Hx lapply (inverse â€¦ Hx) normalize
  cut (S z â‰° z) // #H1 #H2  @(not_ge_1_to_O â€¦ (H2 H1))
]
qed.

lemma veqb_comm: âˆ€x.âˆ€y. veqb x y  = veqb y x.
#x #y elim x #nx elim y #ny normalize //. qed.

lemma veqb_true: âˆ€x. veqb x x = true.
#x elim x #nx elim nx normalize // qed.

lemma gtb_O: âˆ€x. gtb x O = false â†’ x=0.
#x cases x normalize // #nx #abs destruct qed.

let rec pif_subst_sig (n: nat) s: Î t. (t_size t â‰¤ n) â†’
 Î£u: pifTerm. ((t_size u = (t_size t)+ (free_occ_t (match s with [psubst x t â‡’ x]) t) * ((t_size (match s with [psubst x t â‡’ t])) - 1)) âˆ§
  (âˆ€z. free_occ_t z u = match veqb (match s with [psubst y t' â‡’ y]) z with
   [ true â‡’ (free_occ_t z t) * (free_occ_t z match s with [psubst y t' â‡’ t'])
   | false â‡’ (free_occ_t (match s with [psubst y t' â‡’ y]) t) * (free_occ_t z match s with [psubst y t' â‡’ t']) + (free_occ_t z t)
   ])) â‰

 match n return Î»n. Î t. (t_size t â‰¤ n) â†’ Î£u: pifTerm. ((t_size u = (t_size t)+ (free_occ_t (match s with [psubst x t â‡’ x]) t) * ((t_size (match s with [psubst x t â‡’ t])) - 1)) âˆ§
  (âˆ€z. free_occ_t z u = match veqb (match s with [psubst y t' â‡’ y]) z with
   [ true â‡’ (free_occ_t z t) * (free_occ_t z match s with [psubst y t' â‡’ t'])
   | false â‡’ (free_occ_t (match s with [psubst y t' â‡’ y]) t) * (free_occ_t z match s with [psubst y t' â‡’ t']) + (free_occ_t z t)
   ]))
