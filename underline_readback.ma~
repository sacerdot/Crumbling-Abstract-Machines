include "crumbles.ma".
include "basics/types.ma".
include "libnat.ma".

notation "[ term 19 v â† term 19 b ]" non associative with precedence 90 for @{ 'substitution $v $b }.
interpretation "Substitution" 'substitution v b =(subst v b).

(*notation "âŒ© b break, e âŒª" non associative with precedence 90 for @{ 'ccrumble $b $e }.
*)
interpretation "Crumble creation" 'pair b e =(CCrumble b e).

notation "ğ›Œ x . y" right associative with precedence 40 for @{ 'lambda $x $y}.
interpretation "Abstraction" 'lambda x y = (lambda x y ).

notation "Î½ x" non associative with precedence 90 for @{ 'variable $x}.
interpretation "Variable contruction" 'variable x = (variable x).

notation "hvbox(c @ e)" with precedence 35 for @{ 'at $c $e }.
interpretation "@ operation" 'at c e =(at c e).

let rec domb x c on c â‰
 match c with
 [ CCrumble b e â‡’ domb_e x e ]

and domb_e x e on e â‰
 match e with
 [ Epsilon â‡’ false
 | Cons e s â‡’ match s with [ subst y b â‡’ (veqb x y) âˆ¨ (domb_e x e)]
 ].

let rec free_occ_t x t on t â‰
 match t with
 [val_to_term v â‡’ free_occ_v x v
 |appl t1 t2 â‡’ (free_occ_t x t1)+(free_occ_t x t2)
 ]

and free_occ_v x v on v â‰
 match v with
 [ pvar y â‡’ match veqb x y with [ true â‡’ 1 | false â‡’ 0]
 | abstr y t â‡’ match (veqb x y) with [ true â‡’ 0 | false â‡’ (free_occ_t x t)]
 ]
.

let rec gtb n m on n â‰
 match n with
 [ O â‡’ false
 | S n' â‡’ match m with [ O â‡’ true | S m' â‡’ gtb n' m']
 ]
.

definition fv_t â‰ Î»x.Î»t. (free_occ_t x t)>0.
definition fv_v â‰ Î»x.Î»v. (free_occ_v x v)>0.
definition fvb_t â‰ Î»x.Î»t. gtb (free_occ_t x t) 0.
definition fvb_tv â‰ Î»x.Î»v. gtb (free_occ_v x v) 0.

let rec fvb x c on c : bool â‰
 match c with
 [ CCrumble b e â‡’ ((fvb_b x b) âˆ§ Â¬(domb_e x e)) âˆ¨ fvb_e x e ]

and fvb_b x b on b â‰
 match b with
 [ CValue v â‡’ fvb_v x v
 | AppValue v w â‡’ (fvb_v x v) âˆ¨ (fvb_v x w)
 ]

and fvb_e x e on e â‰
 match e with
 [ Epsilon â‡’ false
 | Cons e s â‡’ match s with [subst y b â‡’ ((fvb_e y e) âˆ§ (Â¬ veqb x y)) âˆ¨ fvb_b x b]
 ]

and fvb_v x v on v â‰
 match v with
 [ var y â‡’ veqb x y
 | lambda y c â‡’ (Â¬(veqb y x) âˆ§ fvb x c)
 ]
 .
 
let rec fvb_s x s on s â‰
 match s with
 [subst y b â‡’ (Â¬ veqb x y) âˆ¨ fvb_b x b]
 .

let rec fresh_var c on c â‰
 match c with
 [ CCrumble b e â‡’  max (fresh_var_b b) (fresh_var_e e)]

and fresh_var_b b on b â‰
 match b with
 [ CValue v â‡’ fresh_var_v v
 | AppValue v w â‡’ max (fresh_var_v v) (fresh_var_v w)
 ]

and fresh_var_e e on e â‰
 match e with
 [ Epsilon â‡’ O
 | Cons e s â‡’ max (fresh_var_e e) (fresh_var_s s)
 ]

and fresh_var_v v on v â‰
 match v with
 [ var y â‡’ match y with [ variable x â‡’ S x ]
 | lambda y c â‡’ match y with [ variable x â‡’ max (S x) (fresh_var c)]
 ]

and fresh_var_s s on s â‰
 match s with
 [ subst x b â‡’ match x with [ variable x â‡’ max (S x) (fresh_var_b b)] ]
 .

lemma foo:
 âˆ€A,P.
  âˆ€Q: A â†’ Prop.
   âˆ€c: Î£x:A.P x.
   (âˆ€z. z = pi1 ?? c â†’ P z â†’ Q z) â†’
     Q (pi1 ?? c).
#A #P #Q * /2/
qed.

lemma leq_to_geq: âˆ€x,y. x â‰¤ y â†’ y â‰¥ x.
#x #y #H // qed.

let rec fresh_var_t_Sig t on t : Î£n: nat. (âˆ€x. (free_occ_t (Î½x) t â‰¥ 1) â†’ (n > x)) â‰
 match t return Î»t. Î£n: nat. (âˆ€x. (free_occ_t (Î½x) t â‰¥ 1) â†’ (n > x)) with
 [ val_to_term v â‡’ mk_Sig nat ? (pi1 nat ? (fresh_var_tv_Sig v)) ?
 | appl v w â‡’ mk_Sig nat ? (max (pi1 nat ? (fresh_var_t_Sig v)) (pi1 nat ? (fresh_var_t_Sig w))) ?
 ]

and fresh_var_tv_Sig v on v : Î£n: nat. (âˆ€x. (free_occ_v (Î½x) v â‰¥ 1) â†’ (n > x)) â‰
 match v return Î»v. Î£n: nat. (âˆ€x. (free_occ_v (Î½x) v â‰¥ 1) â†’ (n > x)) with
 [ pvar y â‡’ match y return Î»y. Î£n: nat. (âˆ€x. (free_occ_v (Î½x) (pvar y) â‰¥ 1) â†’ (n > x)) with [variable x â‡’ mk_Sig â€¦ (S x) ?]
 | abstr y t â‡’ match y return Î»y. Î£n: nat. (âˆ€x. (free_occ_v (Î½x) (abstr y t) â‰¥ 1) â†’ (n > x)) with [variable x â‡’ mk_Sig â€¦ (max (S x) (pi1 nat ? (fresh_var_t_Sig t))) ?]
 ]
 .
[ @foo #z #z_def #H #x  #H1 normalize in H1; cut (free_occ_v (Î½x) v â‰¥1)
  [ /2/ assumption
  | -H1 #H1 @((H x) H1)
  ]
| @foo #z #z_def @foo #z1 #z1_def #H1 #H #x #HH normalize in HH;
  lapply HH lapply (H x) cases (free_occ_t (Î½x) v)
  [ #_ -HH #HH lapply (H1 x) -H1 #H1 cut (z1 > x)
    /2/ -H1 #H1  normalize cut (leb z z1= true âˆ¨ leb z z1= false) // * #Htf >Htf
    normalize /2/ lapply(leb_false_to_not_le z z1 Htf )
    -Htf #Htf lapply (not_le_to_lt z z1 Htf) #Hgt normalize in H1;
    @(lt_to_le (S x) z (le_to_lt_to_lt (S x) z1 z H1 Hgt))
  | #n #Hzx cut (z>x)[ /2/ | -Hzx #Hzx  #Hok normalize
    cut (leb z z1= true âˆ¨ leb z z1= false) // * #Htf >Htf
    normalize[ lapply(leb_true_to_le z z1 Htf)
    normalize in Hzx; /2/ | /2/]]
  ]
| #z  normalize cut (neqb z x=true âˆ¨ neqb z x=false) // * #Htf >Htf normalize
  [ #_ lapply(neqb_iff_eq z x) * #Heq #_ lapply (Heq Htf) -Heq #Heq destruct //
  | #Abs @False_ind /2/
  ]
| @foo #z #z_def #H #y normalize cut (neqb y x = true âˆ¨ neqb y x = false) // * #Htf
  >Htf normalize
  [ #Abs @False_ind /2/
  | #HH lapply ((H y) ((leq_to_geq 1 (free_occ_t (Î½y) t)) HH)) #Hgt
    change with (leb (S ?) ?) in match (Â match zÂ inÂ natÂ returnÂ Î»_:â„•.boolÂ withÂ [Oâ‡’false|S (q:â„•)â‡’leb x q])Â ;
    cut (leb (S x) z=true âˆ¨ leb (S x) z=false)  // * #Htf2 >Htf2 normalize
    normalize in Hgt; [ assumption |
    lapply(not_le_to_lt (S x) z ((leb_false_to_not_le (S x) z) Htf2))
    #Hgt2 @(lt_to_le â€¦ (le_to_lt_to_lt (S y) z (S x) Hgt Hgt2))
] qed.

definition fresh_var_t  â‰  Î»t: pifTerm. pi1 nat ? (fresh_var_t_Sig t).
definition fresh_var_tv  â‰  Î»v: pifValue. pi1 nat ? (fresh_var_tv_Sig v).

lemma fresh_var_gt: âˆ€x.(âˆ€t. (free_occ_t (Î½x) t â‰¥ 1) â†’ (fresh_var_t t) > x) âˆ§
                        (âˆ€v. (free_occ_v (Î½x) v â‰¥ 1) â†’ (fresh_var_tv) v > x).
#x % [ #t normalize @foo #z #z_def #H /2/
| #v normalize @foo #z #z_def #H /2/].qed.

